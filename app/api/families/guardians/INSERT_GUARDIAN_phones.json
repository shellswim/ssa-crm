                            "conditional": null,
                            "valid": true
                          },
                          "returning": "uuid",
                          "query": "UPDATE guardians\nSET default_email = :P1 /* {{email_uuid}} */\nWHERE uuid = :P2 /* {{$_POST.guardian_uuid}} */",
