                  "log_category": "Family Note",
                  "log_type": "created",
                  "logged_by": "{{identity}}",
                  "new_value": "{{'Subject: '+$_POST.subject+'\\\\nContent: '+$_POST.content+'\\\\nPriority: '+$_POST.priority}}"
