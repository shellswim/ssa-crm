        "name": "families",
        "module": "dbupdater",
        "action": "custom",
        "options": {
          "connection": "db",
          "sql": {
            "query": "SELECT DISTINCT SUM(score) as score, data.family\n    FROM (\n                  SELECT g.family AS family,\n                         SUM((MATCH(g.firstName, g.lastName) AGAINST(:P1 IN BOOLEAN MODE)) +\n                         (MATCH(s.firstName, s.lastName) AGAINST(:P1 IN BOOLEAN MODE))) as score\n                  FROM guardians g join students s on g.family = s.family\n                    GROUP BY g.family\n              ) as data\nWHERE (score) > 0\nGROUP BY score, data.family\nORDER BY score DESC",
            "params": [
              {
                "name": ":P1",
                "value": "{{$_GET.searchtextfilter}}",
                "test": "tobias zelvis"
              }
            ]
          }
        },
        "output": false,
        "meta": [
          {
            "name": "score",
            "type": "number"
          },
          {
            "name": "family",
            "type": "number"
          }
