<script is="dmx-flow" id="flow_open_student_details" type="text/dmx-flow">{
  meta: {
    $param: [
      {type: "text", name: "tab_to_show"},
      {type: "text", name: "student_uuid"},
      {type: "text", name: "max_note_priority"}
    ]
  },
  exec: {
    steps: [
      {
        run: {
          action: "{{oc_studentDetails.var_studentdetails_uuid.setValue($param.student_uuid)}}"
        }
      },
      {
        wait: {delay: 150}
      },
      {
        run: {
          action: "{{oc_studentDetails.GET_STUDENT_details.load({});oc_studentDetails.var_studentNotePriority.setValue($param.max_note_priority);oc_studentDetails.var_studentdetail_showpartial.setValue($param.tab_to_show)}}"
        }
      },
      {
        run: {action: "{{oc_studentDetails.show()}}"}
      }
    ]
  }
}</script>